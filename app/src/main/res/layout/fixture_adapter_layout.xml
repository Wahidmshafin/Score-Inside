<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fixture_constrain_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp">

    <TextView
        android:id="@+id/fixture_txt_result"
        android:layout_width="138dp"
        android:layout_height="42dp"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:text="4 - 1"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/fixture_img_away"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toEndOf="@+id/fixture_img_home"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fixture_txt_date"
        android:layout_width="101dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="8 May, 2021"
        android:textColor="#00B0FF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/fixture_txt_result"
        app:layout_constraintStart_toStartOf="@+id/fixture_txt_result"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fixture_txt_away"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="Real Madrid"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/fixture_img_away"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/fixture_img_away"
        app:layout_constraintTop_toBottomOf="@+id/fixture_img_away" />

    <TextView
        android:id="@+id/fixture_txt_home"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:text="F.C. Bercelona"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/fixture_img_home"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/fixture_img_home"
        app:layout_constraintTop_toBottomOf="@+id/fixture_img_home" />

    <ImageView
        android:id="@+id/fixture_img_home"
        android:layout_width="58dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_lock_lock" />

    <ImageView
        android:id="@+id/fixture_img_away"
        android:layout_width="58dp"
        android:layout_height="64dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="48dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_audio_away" />

    <TextView
        android:id="@+id/fixture_txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="15:30"
        android:textColor="#E4DFDF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fixture_txt_date"
        app:layout_constraintStart_toStartOf="@+id/fixture_txt_date"
        app:layout_constraintTop_toBottomOf="@+id/fixture_txt_date" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#A39B9B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="190dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>